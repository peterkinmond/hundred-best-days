.container
  .row  
    .col-md-12
      %section
        %ul.timeline
          - @events.each do |event|
            %li
              %time.time{ datetime: event.date}
                %span= event.date.strftime("%b %d")
                %span= event.date.year
              .event_icon
              .event_body
                %span= link_to event.location, event_path(event)
                %h2= event.title 
                %p= truncate(event.description, length: 400)
